<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:layout_width="@dimen/triangle_button_size_2"
        android:layout_height="@dimen/triangle_button_size_1"
        android:text="Top"
        android:id="@+id/button_top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="@dimen/triangle_button_size_2"
        android:layout_height="@dimen/triangle_button_size_1"
        android:text="Bottom"
        android:id="@+id/button_bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_top"/>

    <Button
        android:layout_width="@dimen/triangle_button_size_1"
        android:layout_height="@dimen/triangle_button_size_2"
        android:text="Left"
        android:id="@+id/button_left"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="@dimen/triangle_button_size_1"
        android:layout_height="@dimen/triangle_button_size_2"
        android:text="Right"
        android:id="@+id/button_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>